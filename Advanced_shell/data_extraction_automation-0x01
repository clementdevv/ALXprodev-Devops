#!/bin/bash

# Extract fields using jq
# $name is of type $type, weighs ${formatted_weight}kg, and is ${formatted_height}m tall.
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')  # Capitalize name
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')  # decimeters to meters
#!/bin/bash

# Extract fields using jq
name=$(jq -r '.name' data.json | sed 's/.*/\u&/')                      # Capitalize name
height=$(jq -r '.height' data.json | awk '{printf "%.1f", $1 / 10}')  # decimeters to meters (1 decimal place)
weight=$(jq -r '.weight' data.json | awk '{printf "%.1f", $1 / 10}')  # hectograms to kg (1 decimal place)
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')       # Capitalize type

# Output the formatted sentence
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
weight=$(jq -r '.weight' data.json | awk '{print $1 / 10}')  # hectograms to kg
type=$(jq -r '.types[0].type.name' data.json | sed 's/.*/\u&/')  # Capitalize type

# Output the formatted sentence
echo "$name is of type $type, weighs ${weight}kg, and is ${height}m tall."
